//Initialize npm and install Bootstrap & Sass

mkdir bootstrap-sass-custom
cd bootstrap-sass-custom
npm init -y
npm install bootstrap sass

//SCSS file coustomized
// scss/_variables.scss

// Customize Bootstrap theme variables
$primary: #ff5722;          // Deep orange as new primary color
$border-radius: 1.5rem;     // Large border radius

// scss/custom.scss

@import "variables";
@import "../node_modules/bootstrap/scss/bootstrap";

"scripts": {
  "build-css": "sass scss/custom.scss dist/css/bootstrap.css"
}

npm run build-css

